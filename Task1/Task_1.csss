body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #31363f;
}


h1, h3{
    margin: 0;
    color: white;
}



.place {
    display: inline-block;
    width: 300px;
    margin: 1em;
    padding: 1em;
    background-color: white;
    box-shadow: 0 0 10px lightcoral;
    text-align: left;
}

img {
    width: 35%;
    height: auto;
}

h3 {
    margin: 0.5em 0 0.2em;
    color:white;
}

p {
    margin: 0.2em 0;
    color: white
}


